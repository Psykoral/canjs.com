<div class="tooltip apps">
  <div class="bithub-content">
  {{#apps}}
    <div class="bithub-post">
      {{#if image_url}}
      <a href="{{link}}" class="pull-left"><img src="{{image_url}}"/></a>
      {{/if}}
      <h2><a href="{{link}}">{{title}}</a></h2>
      <p>{{truncatePost body}}</p>
      <div class="bithub-footer">{{author.name}} on {{formatDate date}} via <a href="{{link}}">{{feed}}</a></div>
    </div>
  {{/apps}}
  {{^apps}}
  <div class="loading"/>
  {{/apps}}
  </div>
  <a href="http://bithub.com/app/" class="button">More Apps <span class="icon-arrow"></span></a>
</div>